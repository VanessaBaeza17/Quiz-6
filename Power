#include <iostream>
#include <cmath>
using namespace std;

long superpower(long a, long b){
return pow(a,b);

}

int main(){
int a, b;
  cout << "Give me a number: " <<endl;
  cin >> a;
  cout <<"At which power do you want it? "<< endl;
  cin >> b;
  cout <<a<<" to the power " <<b << " is: " << superpower(a,b) << endl;
  return 0;

}
